@{
  Layout = "_Layout";
}

@using System.Security.Claims;
@using RecipeBox.Models;
@model IEnumerable<RecipeBox.Models.Recipe>

<hr />






@if (User.Identity.IsAuthenticated)
{
  <p>Hey @User.Identity.Name!</p>

@if (Model.Any())
{
  <ul>
    @foreach (Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.Description}", "Details", "Accounts", new { id = recipe.RecipeId })</li>
    }
  </ul>
} 
else
{
  <h3>No recipes have been added yet!</h3>
}

  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-danger btn-xs" value="Log out" />
  }
}
else
{
  <p>@Html.ActionLink("Register", "Register")</p>
  <p>@Html.ActionLink("Log in", "Login")</p>
}